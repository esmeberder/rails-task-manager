<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>


<h1>Incompleted Tasks:</h1>
<div class="container">
  <% @tasks.each do |task| %>
    <div class="task_card">
      <% if task[:completed] == false %>
        <%= form_tag complete_all_path do  %>
        <%= check_box_tag 'tasks_ids[]', task.id %>
        <%= link_to task[:title], task_path(task) %>
        <%= link_to "Delete", destroy_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <%= submit_tag "Update completed" %>
</div>

<h1>Completed Tasks:</h1>
<div class="container">
  <% @tasks.each do |task| %>
    <div class="task_card">
      <% if task[:completed] == true %>
        <p>
          <%= check_box("tag", tag.id, {checked: task[:completed]}) %><%= link_to task[:title], task_path(task) %>
          <%= link_to "Delete", destroy_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to "Add a new task", new_path %>

